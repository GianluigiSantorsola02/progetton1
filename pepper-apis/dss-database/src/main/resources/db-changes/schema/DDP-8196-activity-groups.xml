<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="lkapanad" id="activity-groups">
        <createTable tableName="activity_category">
            <column name="category_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true"/>
            </column>
            <column name="study_id" type="bigint">
            </column>
            <column name="category_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="category_code" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="activity_category_group">
            <column name="form_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true"/>
            </column>
            <column name="category_id" type="bigint">
            </column>
            <column name="form_code" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="form_name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="parent_form_id" type="bigint">
            </column>
        </createTable>

        <createTable tableName="activity_group">
            <column name="activity_id" type="bigint">
            </column>
            <column name="form_id" type="bigint">
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="activity_group" baseColumnNames="activity_id" constraintName="activity_group_activity_id_fk"
                                 referencedTableName="study_activity" referencedColumnNames="study_activity_id"/>

        <addForeignKeyConstraint baseTableName="activity_group" baseColumnNames="form_id" constraintName="activity_group_form_id_fk"
                                 referencedTableName="activity_category_group" referencedColumnNames="form_id"/>

        <addForeignKeyConstraint baseTableName="activity_category_group" baseColumnNames="category_id" constraintName="activity_category_group_category_id_fk"
                                 referencedTableName="activity_category" referencedColumnNames="category_id"/>

        <addForeignKeyConstraint baseTableName="activity_category_group" baseColumnNames="parent_form_id" constraintName="activity_category_group_parent_id_fk"
                                 referencedTableName="activity_category_group" referencedColumnNames="form_id" onDelete="SET NULL"/>

        <addForeignKeyConstraint baseTableName="activity_category" baseColumnNames="study_id" constraintName="activity_category_study_id_fk"
                                 referencedTableName="umbrella_study" referencedColumnNames="umbrella_study_id" />

        <addUniqueConstraint tableName="activity_category" columnNames="category_code,study_id"/>

        <addUniqueConstraint tableName="activity_category_group" columnNames="form_code,category_id"/>

        <addUniqueConstraint tableName="activity_group" columnNames="activity_id"/>

    </changeSet>

</databaseChangeLog>
