<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="Dmitrii Eliseev" id="2022-06-30-center-registration-endpoint">
        <addColumn tableName="center_profile">
            <column name="primary_contact_id" type="bigint">
                <constraints nullable="true" references="center_user(center_id)" foreignKeyName="center_profile_primary_contact_fk" />
            </column>
        </addColumn>

        <addColumn tableName="center_profile">
            <column name="city_id" type="bigint">
                <constraints references="city(city_id)" foreignKeyName="center_profile_city_fk" />
            </column>
        </addColumn>

        <dropColumn tableName="center_profile" columnName="address" />

        <addColumn tableName="center_profile">
            <column name="address1" type="TEXT" />
            <column name="address2" type="TEXT" />
        </addColumn>
    </changeSet>

    <changeSet author="Dmitrii Eliseev" id="2022-06-30-user-permissions">
        <createTable tableName="role">
            <column name="role_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="role_pk"/>
            </column>

            <column name="name" type="VARCHAR(100)" />
        </createTable>

        <createTable tableName="user_role">
            <column name="user_role_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="user_role_pk"/>
            </column>

            <column name="user_id" type="bigint">
                <constraints nullable="false" references="user(user_id)" foreignKeyName="user_role_user_fk"/>
            </column>

            <column name="role_id" type="bigint">
                <constraints nullable="false" references="role(role_id)" foreignKeyName="user_role_role_fk"/>
            </column>
        </createTable>

        <createTable tableName="permission">
            <column name="permission_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="permission_pk"/>
            </column>

            <column name="name" type="VARCHAR(100)" />
        </createTable>

        <createTable tableName="role_permission">
            <column name="role_permission_id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="role_permission_pk"/>
            </column>

            <column name="permission_id" type="bigint">
                <constraints nullable="false" references="permission(permission_id)" foreignKeyName="role_permission_permission_fk"/>
            </column>

            <column name="role_id" type="bigint">
                <constraints nullable="false" references="role(role_id)" foreignKeyName="role_permission_role_fk"/>
            </column>
        </createTable>

        <insert tableName="role">
            <column name="name">Administrator</column>
        </insert>

        <insert tableName="role">
            <column name="name">ELT</column>
        </insert>

        <insert tableName="role">
            <column name="name">Data Manager</column>
        </insert>

        <insert tableName="role">
            <column name="name">Analyst/Researcher</column>
        </insert>
    </changeSet>
</databaseChangeLog>
