<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="lkapanad" id="file-answer-one-to-many">
        <dropPrimaryKey tableName="file_answer"/>
        <dropColumn columnName="answer_id" tableName="file_answer"/>
        <addColumn tableName="file_answer">
            <column name="answer_id" type="bigint">
                <constraints nullable="false"
                             references="answer(answer_id)" foreignKeyName="file_answer_answer_fk"
                             deleteCascade="true"/>
            </column>
        </addColumn>
        <addColumn tableName="file_answer">
            <column name="file_answer_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" primaryKeyName="file_answer__answer_pk"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
