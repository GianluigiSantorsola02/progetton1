<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="charlotte" id="2021-03-03-configured-export">
        <createTable tableName="configured_export">
            <column name="configured_export_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" primaryKeyName="configured_export_pk"/>
            </column>
            <column name="study_id" type="bigint">
                <constraints nullable="false"
                            references="umbrella_study(umbrella_study_id)"
                            foreignKeyName="configured_export_study_id_fk"/>
            </column>
            <column name="is_enabled" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="run_schedule" type="varchar(50)">
                <constraints nullable="true"/>
            </column>
            <column name="bucket_type" type="varchar(20)">
                <constraints nullable="true"/>
            </column>
            <column name="bucket_name" type="varchar(90)">
                <constraints nullable="true"/>
            </column>
            <column name="file_path" type="varchar(200)">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createTable tableName="excluded_participant_field">
            <column name="excluded_participant_field_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" primaryKeyName="excluded_participant_field_pk"/>
            </column>
            <column name="configured_export_id" type="bigint">
                <constraints nullable="false"
                             references="configured_export(configured_export_id)"
                             foreignKeyName="excluded_participant_field_configured_export_id_fk"/>
            </column>
            <column name="excluded_participant_field" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <createTable tableName="export_activity">
            <column name="export_activity_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" primaryKeyName="export_activity_pk"/>
            </column>
            <column name="configured_export_id" type="bigint">
                <constraints nullable="false"
                             references="configured_export(configured_export_id)"
                             foreignKeyName="export_activity_configured_export_id_fk"/>
            </column>
            <column name="activity_id" type="bigint">
                <constraints nullable="false"
                             references="study_activity(study_activity_id)"
                             foreignKeyName="export_activity_study_activity_id_fk"/>
            </column>
            <column name="is_incremental" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="excluded_activity_field">
            <column name="excluded_activity_field_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" primaryKeyName="excluded_activity_field_pk"/>
            </column>
            <column name="export_activity_id" type="bigint">
                <constraints nullable="false"
                             references="export_activity(export_activity_id)"
                             foreignKeyName="excluded_activity_field_export_activity_id_fk"/>
            </column>
            <column name="excluded_activity_field" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="excluded_metadata_field">
            <column name="excluded_metadata_field_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" primaryKeyName="excluded_metadata_field_pk"/>
            </column>
            <column name="export_activity_id" type="bigint">
                <constraints nullable="false"
                             references="export_activity(export_activity_id)"
                             foreignKeyName="excluded_metadata_field_export_activity_id_fk"/>
            </column>
            <column name="excluded_metadata_field" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="export_filter_type">
            <column name="export_filter_type_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" primaryKeyName="export_filter_type_id_pk"/>
            </column>
            <column name="export_filter_type" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="export_filter">
            <column name="export_filter_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" primaryKeyName="export_filter_id_pk"/>
            </column>
            <column name="export_activity_id" type="bigint">
                <constraints nullable="false"
                             references="export_activity(export_activity_id)"
                             foreignKeyName="export_filter_export_activity_id_fk"/>
            </column>
            <column name="export_filter_type_id" type="bigint">
                <constraints nullable="false"
                             references="export_filter_type(export_filter_type_id)"
                             foreignKeyName="export_filter_export_filter_type_id_fk"/>
            </column>
        </createTable>

        <createTable tableName="export_activity_status_filter">
            <column name="export_activity_status_filter_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" primaryKeyName="export_activity_status_filter_id_pk"/>
            </column>
            <column name="export_filter_id" type="bigint">
                <constraints nullable="false"
                             references="export_filter(export_filter_id)"
                             foreignKeyName="export_activity_status_filter_export_activity_id_fk"/>
            </column>
            <column name="export_filter_status_type_id" type="bigint">
                <constraints nullable="false"
                             references="activity_instance_status_type(activity_instance_status_type_id)"
                             foreignKeyName="export_activity_status_filter_export_filter_status_type_id_fk"/>
            </column>
        </createTable>

        <createTable tableName="export_first_field">
            <column name="export_first_field_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints primaryKey="true" primaryKeyName="export_first_field_id_pk"/>
            </column>
            <column name="export_activity_id" type="bigint">
                <constraints nullable="false"
                             references="export_activity(export_activity_id)"
                             foreignKeyName="export_first_field_export_activity_id_fk"/>
            </column>
            <column name="export_first_field" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        
        <insert tableName="export_filter_type">
            <column name="export_filter_type" value="ACTIVITY_STATUS"/>
        </insert>

        <insert tableName="event_trigger_type">
            <column name="event_trigger_type_code" value="EXPORT_COMPLETE"/>
        </insert>
    </changeSet>

</databaseChangeLog>
