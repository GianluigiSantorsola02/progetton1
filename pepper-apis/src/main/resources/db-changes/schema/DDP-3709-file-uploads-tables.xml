<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet author="ypavlov" id="20201208-file-uploads-tables">

        <createTable tableName="file_upload_status">
            <column name="file_upload_status_id" type="bigint" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="file_upload_status_pk"/>
            </column>
            <column name="file_upload_status_name" type="varchar(10)">
                <constraints nullable="false" unique="true" uniqueConstraintName="file_upload_status_name_uk"/>
            </column>
        </createTable>

        <createTable tableName="file_upload">
            <column name="file_upload_id" type="bigint" autoIncrement="true" startWith="1">
                <constraints nullable="false" primaryKey="true" primaryKeyName="file_upload_pk"/>
            </column>
            <column name="file_upload_guid" type="varchar(10)">
                <constraints nullable="false" unique="true" uniqueConstraintName="file_upload_guid_uk"/>
            </column>
            <column name="bucket_file_url" type="varchar(300)">
                <constraints nullable="false" unique="true" uniqueConstraintName="bucket_file_url_uk"/>
            </column>
            <column name="url_creation_time" type="datetime(6)">
                <constraints nullable="false"/>
            </column>
            <column name="file_name" type="varchar(200)">
                <constraints nullable="false"/>
            </column>
            <column name="file_size" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="bigint">
                <constraints nullable="false" foreignKeyName="file_upload2file_upload_status_fk" references="file_upload_status(file_upload_status_id)"/>
            </column>
            <column name="file_creation_time" type="bigint">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <insert tableName="file_upload_status">
            <column name="file_upload_status_name" value="AUTHORIZED"/>
        </insert>

        <insert tableName="file_upload_status">
            <column name="file_upload_status_name" value="VERIFIED"/>
        </insert>

    </changeSet>
</databaseChangeLog>
